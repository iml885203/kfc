{
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "lib": [
      "ES2022"
    ],
    "rootDir": "./src",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "pkg",
    "cmd"
  ]
}
