{
  "name": "kfctl",
  "type": "module",
  "version": "0.1.9",
  "description": "Kubernetes Follow Colorful - Follow Kubernetes deployment logs with style",
  "publishConfig": {
    "access": "public"
  },
  "author": "iml88503",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iml885203/kfc.git"
  },
  "keywords": [
    "kubernetes",
    "k8s",
    "logs",
    "kubectl",
    "cli",
    "ink",
    "typescript"
  ],
  "main": "index.js",
  "bin": {
    "kfctl": "./dist/cli.js"
  },
  "files": [
    "README.md",
    "dist/"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.tsx",
    "start": "node dist/cli.js",
    "prepublishOnly": "pnpm run build",
    "test": "NODE_OPTIONS='--import tsx' cucumber-js features/**/*.feature --import 'features/step_definitions/**/*.ts'",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --project tsconfig.test.json",
    "prepare": "husky"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "dependencies": {
    "@kubernetes/client-node": "^1.4.0",
    "chalk": "^5.6.2",
    "clipboardy": "^5.1.0",
    "commander": "^14.0.2",
    "execa": "^9.6.1",
    "ink": "^6.6.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "meow": "^14.0.0",
    "react": "^19.2.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@cucumber/cucumber": "^12.6.0",
    "@eslint-react/eslint-plugin": "^2.8.1",
    "@testing-library/react": "^16.3.2",
    "@types/chai": "^5.2.3",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "chai": "^6.2.2",
    "eslint": "^9.0.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "husky": "^9.1.7",
    "ink-testing-library": "^4.0.0",
    "lint-staged": "^16.2.7",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs}": [
      "eslint --fix"
    ]
  }
}
